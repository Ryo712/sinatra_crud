    const favoriteBtn = document.querySelector('.favorite-btn-detail');
    
    if (favoriteBtn) {
        favoriteBtn.addEventListener('click', function(e) {
            e.preventDefault();
            
            const restaurantId = this.dataset.restaurantId;
            const starIcon = this.querySelector('.star-icon');
            const favoriteText = this.querySelector('.favorite-text');
            
            // ãƒœã‚¿ãƒ³ã‚’ä¸€æ™‚çš„ã«ç„¡åŠ¹åŒ–
            this.disabled = true;
            
            // Ajax ãƒªã‚¯ã‚¨ã‚¹ãƒˆ
            fetch(`/restaurants/${restaurantId}/favorite`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                credentials: 'same-origin'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // ã‚¢ã‚¤ã‚³ãƒ³ã¨ãƒ†ã‚­ã‚¹ãƒˆã‚’æ›´æ–°
                    if (data.action === 'added') {
                        starIcon.textContent = 'â˜…';
                        favoriteText.textContent = 'ãŠæ°—ã«å…¥ã‚Šæ¸ˆã¿';
                        this.classList.add('favorited');
                        this.title = 'ãŠæ°—ã«å…¥ã‚Šã‹ã‚‰å‰Šé™¤';
                    } else {
                        starIcon.textContent = 'â˜†';
                        favoriteText.textContent = 'ãŠæ°—ã«å…¥ã‚Šã«è¿½åŠ ';
                        this.classList.remove('favorited');
                        this.title = 'ãŠæ°—ã«å…¥ã‚Šã«è¿½åŠ ';
                    }
                    
                    // æˆåŠŸæ™‚ã®ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
                    this.style.transform = 'scale(1.1)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 300);
                    
                    // ç°¡å˜ãªæˆåŠŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ï¼ˆã‚ªãƒ—ã‚·ãƒ§ãƒ³ï¼‰
                    const message = document.createElement('div');
                    message.textContent = data.message;
                    message.style.cssText = `
                        position: fixed;
                        top: 20px;
                        right: 20px;
                        background: #28a745;
                        color: white;
                        padding: 10px 20px;
                        border-radius: 5px;
                        z-index: 1000;
                        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
                    `;
                    document.body.appendChild(message);
                    
                    // 3ç§’å¾Œã«ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’å‰Šé™¤
                    setTimeout(() => {
                        if (message.parentNode) {
                            message.parentNode.removeChild(message);
                        }
                    }, 3000);
                    
                } else {
                    // ã‚¨ãƒ©ãƒ¼æ™‚ã®å‡¦ç†
                    console.error('ãŠæ°—ã«å…¥ã‚Šå‡¦ç†ã‚¨ãƒ©ãƒ¼:', data.message);
                    alert(data.message || 'ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ');
                }
            })
            .catch(error => {
                console.error('ãƒãƒƒãƒˆãƒ¯ãƒ¼ã‚¯ã‚¨ãƒ©ãƒ¼:', error);
                alert('é€šä¿¡ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ');
            })
            .finally(() => {
                // ãƒœã‚¿ãƒ³ã‚’å†æœ‰åŠ¹åŒ–
                this.disabled = false;
            });
        });
        
        // åˆæœŸçŠ¶æ…‹ã®è¨­å®š
        const isCurrentlyFavorited = favoriteBtn.querySelector('.star-icon').textContent.trim() === 'â˜…';
        if (isCurrentlyFavorited) {
            favoriteBtn.classList.add('favorited');
        }
    }
});
</script>